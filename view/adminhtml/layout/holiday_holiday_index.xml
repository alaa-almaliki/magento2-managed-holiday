<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Alaa_ManagedHoliday::holiday</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.title">
            <action method="setTitleClass">
                <argument name="class" xsi:type="string">complex</argument>
                <argument translate="true" name="title" xsi:type="string">Manage Holiday</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <uiComponent name="holiday_listing"/>
        </referenceContainer>
    </body>
</page>
